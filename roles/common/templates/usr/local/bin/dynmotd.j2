#!/bin/bash

#######################
# Script - Dynamic MOTD #
#######################

PROCCOUNT=`ps -Afl | wc -l`
PROCCOUNT=`expr $PROCCOUNT - 5`

echo -e "\033[1;32m _ _

____________________ ________        ____._______________________________
\______   \______   \\_____  \      |    |\_   _____/\_   ___ \__    ___/
 |     ___/|       _/ /   |   \     |    | |    __)_ /    \  \/ |    |
 |    |    |    |   \/    |    \/\__|    | |        \\     \____|    |
 |____|    |____|_  /\_______  /\________|/_______  / \______  /|____|
                  \/         \/                   \/         \/

\033[0;35m+++++++++++++++++: \033[0;37mSystem Data\033[0;35m :+++++++++++++++++++
\033[0;35m+    \033[0;37mHostname \033[0;35m= \033[1;32m`hostname`
\033[0;35m+      \033[0;37mKernel \033[0;35m= \033[1;32m`uname -r`
\033[0;35m+     \033[0;37mVersion \033[0;35m= \033[1;32m`lsb_release -d | awk '{ s = ""; for (i = 2; i <= NF; i++) s = s $i " "; print s }'`
\033[0;35m+      \033[0;37mUptime \033[0;35m=\033[1;32m`uptime | sed 's/.*up ([^,]*), .*/1/'`
\033[0;35m+         \033[0;37mCPU \033[0;35m= \033[1;32m`head -n10 /proc/cpuinfo | grep "model name" | awk '{ s = ""; for (i = 4; i <= NF; i++) s = s $i " "; print s }'`(`cat /proc/cpuinfo | grep processor | wc -l` cores)
\033[0;35m+ \033[0;37mTotalMemory \033[0;35m= \033[1;32m`free -h | grep Mem: | awk {'print $2'}`
\033[0;35m+  \033[0;37mUsedMemory \033[0;35m= \033[1;32m`free -h | grep Mem: | awk {'print $3'}`
\033[0;35m++++++++++++++++++: \033[0;37mUser Data\033[0;35m :++++++++++++++++++++
\033[0;35m+    \033[0;37mUsername \033[0;35m= \033[1;32m`whoami`
\033[0;35m+      \033[0;37mGroups \033[0;35m= \033[1;32m`groups $USER`
\033[0;35m+   \033[0;37mProcesses \033[0;35m= \033[1;32m$PROCCOUNT of `ulimit -u` max"
if [[ `passwd -S $USER | cut -d' ' -f2` == 'L' ]]; then
    if groups $USER | grep &>/dev/null '\bsudo\b'; then
        echo -e "\033[0;35m+ \e[1;91mImportant: it seems you (`whoami`) have no setted password. Run \e[0;31msudo change_passwd\e[1;91m to choose one."
    fi
fi
echo -e "\033[0;35m+++++++++++++: \033[0;37mHelpful Information\033[0;35m :+++++++++++++++"
command -v php >/dev/null && echo -e "\033[0;35m+    \033[0;37mPHP ver. \033[0;35m= \033[1;32m`php -v | grep built`" || /bin/false
command -v apachectl >/dev/null && echo -e "\033[0;35m+ \033[0;37mApache ver. \033[0;35m= \033[1;32m`apachectl -v | grep version | awk '{ s = ""; for (i = 3; i <= NF; i++) s = s $i " "; print s }'`" || command -v /usr/sbin/apache2 >/dev/null && echo -e "\033[0;35m+ \033[0;37mApache ver. \033[0;35m= \033[1;32m`/usr/sbin/apache2 -v | grep version | awk '{ s = ""; for (i = 3; i <= NF; i++) s = s $i " "; print s }'`" || /bin/false
command -v mysql >/dev/null && echo -e "\033[0;35m+  \033[0;37mMySQL ver. \033[0;35m= \033[1;32m`mysql -V`" || /bin/false
echo -e "\033[0;35m+++++++++++++: \033[0;37mNetwork Information\033[0;35m :+++++++++++++++"
    for net_interface in `ip link show | grep eth | grep UP | awk {'print $2'} | sed 's/://g'`
    do
        IPV4=`ip addr show ${net_interface} | grep 'inet ' | grep -Eo '\<[[:digit:]]{1,3}(\.[[:digit:]]{1,3}){3}\>' | head -1 `
        echo -e "\033[0;35m+   \033[0;37m${net_interface} IPv4 \033[0;35m= \033[1;32m${IPV4}"
        for IPV6 in `ip -6 addr show ${net_interface} | grep 'inet6' | awk {'print $2'}`
        do
            if [[ "${IPV6}" =~ ^fe80.* ]]; then
                echo -e "\033[0;35m+   \033[0;37m${net_interface} IPV6 \033[0;35m= \033[1;32mLink-Local-Address"
            else
                echo -e "\033[0;35m+   \033[0;37m${net_interface} IPv6 \033[0;35m= \033[1;32m${IPV6}"
            fi
        done
    done
echo -e "\033[0;35m+++++++++++++++++++++++++++++++++++++++++++++++++++\e[0:m"