# Activate compression for JS/CSS and other static files
# Do not activate for html or dynamic files due to security vulnerability BREACH
<IfModule mod_mime.c>
    AddType application/x-javascript .js
    AddType text/css .css
</IfModule>
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/css application/x-javascript image/x-icon application/javascript text/javascript application/ecmascript
    <IfModule mod_setenvif.c>
        SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png)$ no-gzip
        BrowserMatch ^Mozilla/4\.0[678] no-gzip
        BrowserMatch \bMSIE !no-gzip
    </IfModule>
    <IfModule mod_headers.c>
        Header append Vary User-Agent env=!dont-vary
    </IfModule>
</IfModule>